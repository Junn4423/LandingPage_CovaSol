{
  "name": "covasol-platform",
  "version": "2.0.0",
  "private": true,
  "description": "COVASOL full-stack platform (Next.js frontend + Express API backend)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=@covasol/backend",
    "dev:frontend": "npm run dev --workspace=@covasol/frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run build --workspace=@covasol/backend",
    "build:frontend": "npm run build --workspace=@covasol/frontend",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm run start --workspace=@covasol/backend",
    "start:frontend": "npm run start --workspace=@covasol/frontend",
    "prisma:migrate": "npm run prisma:migrate --workspace=@covasol/backend",
    "prisma:seed": "npm run prisma:seed --workspace=@covasol/backend",
    "prisma:studio": "npm run prisma:studio --workspace=@covasol/backend",
    "lint": "npm run lint --workspace=@covasol/frontend",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "static": "node scripts/static-server.js",
    "db:migrate": "node src/db/migrate.js",
    "db:seed": "node src/db/seed.js"
  },
  "keywords": [
    "covasol",
    "landing-page",
    "technology",
    "software-development",
    "ui-ux-design",
    "digital-transformation",
    "vietnam",
    "responsive",
    "modern"
  ],
  "author": {
    "name": "COVASOL Team",
    "email": "covasol.studio@gmail.com",
    "url": "https://covasol.top"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/covasol/landing-page"
  },
  "homepage": "https://covasol.top",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.4.1",
    "connect-sqlite3": "^0.9.0",
    "dotenv": "^16.4.1",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "slugify": "^1.6.6",
    "xlsx": "^0.18.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "npm@10.8.1"
}
