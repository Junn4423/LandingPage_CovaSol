{
  "name": "covasol-platform",
  "version": "2.0.0",
  "private": true,
  "description": "COVASOL full-stack platform (Next.js frontend + Express API backend)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace apps/backend\" \"npm run dev --workspace apps/frontend\"",
    "dev:backend": "npm run dev --workspace apps/backend",
    "dev:frontend": "npm run dev --workspace apps/frontend",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "test": "npm run test --workspaces"
  },
  "author": {
    "name": "COVASOL Team",
    "email": "covasol.studio@gmail.com",
    "url": "https://covasol.top"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Junn4423/LandingPage_CovaSol"
  },
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "npm@10.8.1"
}
