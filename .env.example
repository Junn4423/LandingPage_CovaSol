# ===========================================
# CovaSol API - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -------------------------------------------
# Database Configuration (MySQL/MariaDB - Laragon)
# -------------------------------------------
# Laragon default: root with no password
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=covasol

# -------------------------------------------
# Session Configuration
# -------------------------------------------
# A long random string for signing session cookies
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Name of the table to store sessions in MySQL
SESSION_TABLE=sessions

# -------------------------------------------
# Server Configuration
# -------------------------------------------
# Port for the API server to listen on
PORT=3001

# Environment: development, production, test
NODE_ENV=development

# -------------------------------------------
# CORS Configuration
# -------------------------------------------
# Comma-separated list of allowed origins for CORS
# Include all domains that will access this API
CORS_ORIGINS=http://localhost:3000,http://localhost:5500,http://127.0.0.1:5500

# Primary frontend URL (also added to CORS automatically)
FRONTEND_URL=http://localhost:3000

# -------------------------------------------
# Admin Configuration
# -------------------------------------------
# Default admin credentials (used during seeding)
# IMPORTANT: Change these in production!
ADMIN_EMAIL=admin@covasol.com
ADMIN_PASSWORD=admin123

# -------------------------------------------
# Optional: Logging
# -------------------------------------------
# Log level: error, warn, info, debug
LOG_LEVEL=info
